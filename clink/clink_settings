# name: Enable automatic suggestions
# type: boolean
autosuggest.enable = True

# name: Selects default key bindings
# type: enum
# options: bash,windows
clink.default_bindings = windows

# name: Use GUI popup windows
# type: boolean
clink.gui_popups = True

# name: Controls what startup logo to show
# type: enum
# options: none,full,short
clink.logo = short

# name: Strips CR and LF chars on paste
# type: enum
# options: delete,space,ampersand,crlf
clink.paste_crlf = space

# name: Auto-answer terminate prompt
# type: enum
# options: off,answer_yes,answer_no
cmd.auto_answer = answer_yes

# name: Pressing Ctrl-D exits session
# type: boolean
cmd.ctrld_exits = True

# name: Argument color
# type: color
color.arg = bold

# name: Argument info color
# type: color
color.arginfo = blue

# name: Argmatcher color
# type: color
color.argmatcher = green

# name: Shell command completions
# type: color
color.cmd = green

# name: Color for < and > redirection symbols
# type: color
color.cmdredir = yellow

# name: Color for & and | command separators
# type: color
color.cmdsep = default

# name: Color for comment row
# type: color
color.comment_row = cyan

# name: Description completion color
# type: color
color.description = blue

# name: Doskey completions
# type: color
color.doskey = cyan

# name: Color for executable command word
# type: color
color.executable = green

# name: Filtered completion color
# type: color
color.filtered = white

# name: Flag color
# type: color
color.flag = default

# name: Color for preferred branch completions
# type: color
color.git.star = green

# name: Hidden file completions
# type: color
color.hidden = red

# name: Horizontal scroll marker color
# type: color
color.horizscroll = black

# name: Input text color
# type: color
color.input = default

# name: For user-interaction prompts
# type: color
color.interact = bold

# name: Message area color
# type: color
color.message = default

# name: Readonly file completions
# type: color
color.readonly = green

# name: Selected completion color
# type: color
color.selected_completion = black on white

# name: Selection color
# type: color
color.selection = default

# name: Color for suggestion text
# type: color
color.suggestion = light black

# name: Unexpected argument color
# type: color
color.unexpected = default

# name: Color for unrecognized command word
# type: color
color.unrecognized = red

# name: Skip adding lines prefixed with whitespace
# type: boolean
history.ignore_space = True

# name: The number of history lines to save
# type: integer
history.max_lines = 10000

# name: Expand envvars when completing
# type: boolean
match.expand_envvars = True

# name: Try substring if no prefix matches
# type: boolean
match.substring = True

# name: Support Windows' Ctrl-Alt substitute for AltGr
# type: boolean
terminal.use_altgr_substitute = True

