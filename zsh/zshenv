autoload -U colors && colors

local OS=$(uname -a)
local MAC='Darwin'
local LINUX='Linux'

case $OS in
*$MAC*)
	alias ls='ls -G'
	alias copy='pbcopy'
	export PATH=/usr/local/opt/openssl/bin:$PATH
	export JAVA_HOME=$(/usr/libexec/java_home)
	;;
*$LINUX*)
	alias ls='ls --color=auto'
	export GOROOT=/usr/local/go
	;;
esac

export PATH=/bin:$PATH
export PATH=/sbin:$PATH
export PATH=/usr/bin:$PATH
export PATH=/usr/sbin:$PATH
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/sbin:$PATH

alias luamake=/Users/asidlo/.local/src/lua-language-server/3rd/luamake/luamake

alias ll='ls -AlFG'
alias l='ls'
alias la='ls -AG'
alias grep='grep --color=auto'
alias cls='clear'

export MANWIDTH=999

export GOPATH=$HOME/.local/go
export PATH=$PATH:$GOROOT/bin
export PATH=$PATH:$GOPATH/bin

[[ -v JAVA_HOME ]] && export PATH=$PATH:$JAVA_HOME/bin
[[ -v GRADLE_HOME ]] && export PATH=$PATH:$GRADLE_HOME/bin

export DOTNET_ROOT=/usr/local/share/dotnet
export PATH=$PATH:$DOTNET_ROOT
export PATH=$PATH:~/.dotnet/tools

# For using gpg for pass and git credential manager
# See https://github.com/GitCredentialManager/git-credential-manager/blob/main/docs/credstores.md#gpgpass-compatible-files
export GPG_TTY=$(tty)

LUAROCKS_HOME=~/.local/src/luarocks-3.3.1
[[ -d "$LUAROCKS_HOME/lua_modules/bin" ]] && export PATH=$PATH:"$LUAROCKS_HOME/lua_modules/bin"

# [ -z $LSP_SERVERS ] && export LSP_SERVERS="jdtls,jsonls,cmake,omnisharp,rust_analyzer,sumneko_lua,pyright,gopls,bashls,clangd,dockerls,yamlls,taplo"
# [ -z $TS_MODULES ] && export TS_MODULES="all"

[ -f "$HOME/.cargo/env" ] && source "$HOME/.cargo/env"

export NVM_DIR="$HOME/.nvm"
if [ -d $NVM_DIR ]; then
    [ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"  # This loads nvm
    [ -s "$NVM_DIR/bash_completion" ] && source "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
fi

export SDKMAN_DIR="$HOME/.sdkman"
if [[ -s "$SDKMAN_DIR/bin/sdkman-init.sh" ]]; then
    source "$SDKMAN_DIR/bin/sdkman-init.sh"
fi
