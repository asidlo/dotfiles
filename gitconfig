[user]
    name = asidlo
    email = sidlo.andrew@gmail.com
[core]
    preloadindex = true
    fscache = true
    editor = vim
[log]
    # 2019-02-05 11:53:12 -0500
    date = iso
[branch]
    # Automatically rebase to remove merged commit message on pull
    autosetuprebase = always
[commit]
    verbose = true
[diff]
    tool = vimdiff
[difftool]
    prompt = 0
[alias]
    b = branch

    s = status
    ss = status -s

    sm = submodule
    sma = submodule add

    d = diff
    dh = diff HEAD

    co = checkout
    cob = checkout -b

    a = add
    au = add -u # Update all tracked files
    aa = add -A # Add all files to staging

    ca = commit --amend
    can = commit --amend --no-edit
    cmsg = commit -m

    l = log
    lo = log --oneline --decorate --pretty='* %C(auto)%h%Creset %Cgreen(%ad)%C(auto)%d%Creset %s %C(bold blue)<%an>%Creset'
    lodr = log --oneline --decorate --pretty='* %C(auto)%h%Creset %Cgreen(%ad)%C(auto)%d%Creset %s %C(bold blue)<%an>%Creset' --date=relative
    lods = log --oneline --decorate --pretty='* %C(auto)%h%Creset %Cgreen(%ad)%C(auto)%d%Creset %s %C(bold blue)<%an>%Creset' --date=short

    lg = log --graph
    lgo = log --graph --pretty='%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
    lgods = log --graph --pretty='%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --date=short
    lgodr = log --graph --pretty='%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --date=relative

    # standup - last 1 week written by me
    sup = log --oneline --decorate --pretty='* %C(auto)%h%Creset %Cgreen(%ad)%C(auto)%d%Creset %s %C(bold blue)<%an>%Creset' --date=relative --since='1 week' --author sidlo.andrew@gmail.com 

